@model IEnumerable<CoreWebApp.Web.Models.Item> 
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Item List</h2>
        </div>
        <div class="col-6" text-right>
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                </tr>
            </thread>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="33%"></td>
                        <td width="33%">@item.Borrower</td>
                        <td width="33%">@item.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> no items created yet</p>
    }
</div>